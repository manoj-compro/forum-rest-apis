generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id String @id @default(uuid())
  name String
  email String @unique
  password String
  threads Thread[]
  posts Post[]
}

model Thread {
  id String @id @default(uuid())
  title String
  content String
  userId String
  user User @relation(fields: [userId], references: [id])
  post Post[]
}

model Post {
  id String @id @default(uuid())
  content String
  userId String
  user User @relation(fields: [userId], references: [id])
  threadId String
  thread Thread @relation(fields: [threadId], references: [id])
}